{
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.24.2",
    "esbuild-plugin-postcss": "^0.2.1",
    "postcss": "^8.5.1",
    "tailwindcss": "^4.0.4"
  },
  "scripts": {
    "build": "esbuild app/javascript/application.js --bundle --outdir=app/assets/builds",
    "watch": "esbuild app/javascript/application.js --bundle --watch --outdir=app/assets/builds",
    "build:css": "npx tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify"

  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.12",
    "swiper": "^11.2.1"
  },
  "packageManager": "yarn@4.6.0"
}
