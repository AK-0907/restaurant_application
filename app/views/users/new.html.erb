<h1>新規登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <div class="form">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name ,id:'user-name' %>

      <%= f.label :email %>
      <%= f.email_field :email ,id:'user-email' %>

      <%= f.label :password %>
      <%= f.password_field :password ,id:'user-password' %>

      <%= f.label :password_confirmation, "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation ,id:'user-password-cmf'%>
      
      <%= f.label :アイコン画像のアップロード %>
      <span class="image">
        <%= f.file_field :image %>
      </span>

      <%= f.submit "ユーザー登録", class: "btn btn-primary" %>
    <% end %>
  </div>  
  </div>
</div>
