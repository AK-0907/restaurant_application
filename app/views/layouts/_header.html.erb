<header class="navbar navbar-fixed-top bg-primary">
<div class="container">
  <%= link_to "RestaurantChooser", root_path , id: "logo" %>
  <nav>
    <ul class="nav navbar-nav  navbar-right">
 
      <% if logged_in? %>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              アカウント <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
  </nav>
</div>
</header>