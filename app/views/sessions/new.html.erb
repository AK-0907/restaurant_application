<h1>ログイン</h1>


  <div class="col-md-6 col-md-offset-3">

  <div class="form">
    <%= form_with(url: login_path, scope: :session) do |f| %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: 'form-control' ,id: 'sessions-email' %>

      <%= f.label :パスワード %>
      <%= link_to "(パスワード再設定はこちら)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' ,id: 'sessions-password' %>


    
      <%= f.submit "ログイン", class: "btn btn-primary" %>
      
    <% end %>
    <p><%= link_to "新規登録はこちら", signup_path %></p>

   </div> 
     

</div>
